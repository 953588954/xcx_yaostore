.product_list{
  width: 94%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin:0 auto;
  padding-bottom: 30rpx;
}
.product_item{
  width: 49%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0rpx 24rpx 0rpx;
  border-radius: 10rpx; 
  margin-bottom: 20rpx;
}

.product_img{
  width: 80%;
  height: 220rpx; 
}
.product_img image{
  width: 100%;
  height: 100%;
}
.product_name{
  text-align: center;
  color: #666;
  font-size: 28rpx;
  height: 40rpx;
  margin-top: 6rpx;
  width: 80%;
}
.product_price{
   text-align: center;
  color: #A1A1A1;
  font-size: 24rpx;
  width: 100%;
}