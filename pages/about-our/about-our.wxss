/* pages/about-our/about-our.wxss */
.about-our-container{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}
.head-img{
  width: 100%;
  height: 280rpx;
  position: relative;
}
.head-img .img{
  width: 100%;
  height: 100%;
  -webkit-filter: blur(1px);
  opacity: 0.8;
}
.tou-ming-ceng{
  width: 100%;
  height: 280rpx;
  position: absolute;
  top: 0;
  background-color: black;
  opacity: 0.6;
}
.fixed-img{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 80rpx;
  left:325rpx;
}
.fixed-img image{
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
}
.fixed-title{
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  top: 190rpx;
  letter-spacing: 2rpx;
}
.store-description{
  width: 100%;
  padding: 20rpx 0rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #fff;
  line-height: 40rpx;
}
.des-item{
  margin: 20rpx 30rpx;
  text-indent: 2em;
  letter-spacing: 1rpx;
}
.kongxi{
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}
.store-info{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.info-title{
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #AB956D;
}
.info-item{
  margin: 10rpx 30rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  color: #666;
}
.info-item.phone{
  color: #AB956D;
}
.info-item image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}
.bottom{
  height: 60rpx;
  font-size: 20rpx;
  color: #AB956D;
  background-color: #f5f5f5;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}