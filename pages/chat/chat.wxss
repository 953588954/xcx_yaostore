/* pages/chat/chat.wxss */
page{
  background-color: #e6e6e6;
  font-size: 28rpx;
}
.chat-content{
  display: flex;
  flex-direction: column;
  margin: 10rpx 30rpx 130rpx 30rpx;
}
.left-line-view{
  display: flex;
  margin-bottom: 30rpx;
}
.head-box{
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
}
.msg-box{
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0rpx 30rpx;
  max-width: 460rpx;
}

.right-line-view{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 30rpx;
}

.time-center{
  margin: 30rpx auto;
  background-color: #cdcdcd;
  padding: 8rpx 16rpx;
  border-radius: 14rpx;
  color:#fff;
  font-size:24rpx;
}
.more-center{
  margin: 20rpx auto 0rpx auto;
  color:blue;
  font-size:24rpx;
}

/* 游离底部 */
.fix-input{
  min-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width:100%;
}
.input-btn-box{
  margin: 20rpx 0rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.input-box{
  height: 60rpx;
  margin-left: 60rpx;
  width: 500rpx;
  background-color: #e6e6e6;
  border-radius: 20rpx;
}
.input-box input{
  padding-left: 20rpx;
}
.send-btn{
  float: right;
  margin-right: 40rpx;
  background-color: #f84e38;
  color: #fff;
  padding: 0rpx 16rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}