/* pages/index/index.wxss */
@import "../../template/products-tpl.wxss";

.container,.index-view,.search-product-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}
.serach-main{
    position: fixed;
    z-index: 100;
    top: 0;
    width: 100%;
    background-color: black;
    opacity: 0.7;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.serach-view{
    width: 500rpx;
    height: 50rpx;
    border-radius: 30rpx;
    opacity: 1;
    background-color: #fff;
    display: flex;
    align-items: center;
}
.serach-view image{
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
}
/* inputæ¡† */
input{
    color: #999;
    font-size: 28rpx;
    height: 100%;
    width: 320rpx;
}
.swiper{
  width: 100%;
  height: 348rpx;
}
.swiper-item{
  width: 100%;
  height:100%;
}
.swiper-item image{
  width: 100%;
  height: 100%;
}
.title{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #AB956D;
  width: 100%;
  font-size: 26rpx;
  letter-spacing: 1px;
}
.topic{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
  justify-content: space-between;
  padding-bottom: 20rpx;
}
.topic_item{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20rpx;
  font-size: 24rpx;
  color: #999;
}
.topic_item image{
  max-width: 100rpx;
  max-height: 100rpx; 
}

.search-products{
    width: 100%;
    min-height: 100vh;
    background-color: #f5f5f5;
    padding-top: 120rpx;
}
.no-search-product{
    width: 100%;
    height: 300rpx;
    font-size: 28rpx;
    color: #666;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
