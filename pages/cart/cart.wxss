/* pages/cart/cart.wxss */
.cart-container{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-bottom: 90rpx;
}
.product-item{
  width: 100%;
  height: 240rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
}
.item-select{
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-select image{
  width: 48rpx;
  height: 48rpx;
}
.item-img{
  width: 180rpx;
  height: 180rpx;
   border: 2rpx solid #AB956D; 
    padding:10rpx;  
}
.item-img image{
  width: 100%;
  height: 100%;
}
.item-info{
  flex: 1;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0rpx 20rpx;
}
.item-top,.item-mid{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: black;
}
.item-top text{
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
}
.item-mid{
  margin-top: 10rpx;
}
.product-decOrInc{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-decOrInc view{
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.product-decOrInc .control-product{
  font-size: 40rpx;
  padding:0rpx 10rpx;
  font-weight: bolder;
}
.control-product.disabled{
    color: #999;
    pointer-events: none;
}
.product-del{
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}
.product-del image{
  width: 100%;
  height: 100%;
}
.item-bot .dosage{
  color: #fff;
  font-size: 22rpx;
  padding: 5rpx 8rpx;
  border-radius: 4rpx;
  background-color: green;
}
.item-bot .not-dosage{
  color: #fff;
  font-size: 22rpx;
  padding: 5rpx 8rpx;
  border-radius: 4rpx;
  background-color: red;
}
/*底部  */
.bot-order{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: #AB956D;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.order-left{
  width: 70%;
  display: flex;
  justify-content: space-between;
}
.all-select{
  display: flex;
  align-items: center;
  letter-spacing: 2rpx;
}
.all-select image{
  width: 48rpx;
  height: 48rpx;
  margin: 0rpx 20rpx;
}
.all-price{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.pay-order{
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-left: 1px dotted #fff;
}
.pay-order image{
  width: 48rpx;
  height: 48rpx;
}
.pay-order.disabled{
    color: #e6e6e6;
    pointer-events: none;
}

.no-data{
    display: flex;
    height: 140rpx;
    font-size: 26rpx;
    color: #ccc;
    align-items: center;
    justify-content: center;
}
