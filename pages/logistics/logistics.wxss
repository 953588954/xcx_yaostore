/* pages/logistics/logistics.wxss */
.logistics-container{
  width: 100%;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
}
.number-main-box{
    width: 100%;
    display: flex;
    padding: 20rpx 0rpx;
}
.number-main{
  width: 80%;
  display: flex;
  flex-direction: column;
}
.number-main text{
  margin-left: 30rpx;
  height: 45rpx;
  line-height: 45rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
}
.number-main-status{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #4fc988;
    font-size: 28rpx;
}
.kongxi{
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.bot-info{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 60rpx;
  font-size: 22rpx;
  color: #AB956D;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}


.logistics-info{
  width: 100%;
}
.logistics-main{
  margin-left: 40rpx;
  border-left: 1px solid #cdcdcd;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.logistics-item{
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  flex-direction: column;
  color: #8a8a8a;
  font-size: 26rpx;
}
.logistics-item.first{
  color: #4fc988;
}
.logistics-item.first .dotted{
  background-color:#4fc988;
  border: 1px solid #4fc988;
  box-shadow: 0 0 6rpx #4fc988;
}
.logistics-item.last{
  border-bottom: none;
}
.item-info,.item-time{
  padding: 10rpx 0rpx;
}
.item-info{
  position: relative;
  white-space: wrap;
  margin-right: 20rpx;
  letter-spacing: 1rpx;
}
.dotted{
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #bfbfbf;
  top:25rpx;
  left: -38rpx;
}